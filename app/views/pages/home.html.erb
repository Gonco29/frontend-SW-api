<div class="container">
  <h2>PERSONAJES</h2>
  <div class="row">
      <% @characters.sample(6).each do |character| %>
        <div class="col-2 mt-2 mb-2">
          <div class="card" >
            <%= link_to character_path(character['id']) do %>
            <img src="<%= character["image_url"] %>" class="card-img-top" alt="...">
            <% end %>
            <div class="card-body">
              <p> <%= link_to character["name"], character_path(character['id']) %></p>
            </div>
          </div>
        </div>
      <% end %>
  </div>
</div>
